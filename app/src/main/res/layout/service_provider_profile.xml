<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ServiceProviderProfile"
    android:layout_margin="30dp">

    <ImageView
        android:id="@+id/service_provider_dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_weight="0"/>

    <TextView
        android:id="@+id/service_provider_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent2"
        android:layout_below="@+id/service_provider_dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Locality"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_below="@+id/service_provider_dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="30dp"/>

            <TextView
                android:id="@+id/service_provider_locality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Locality"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_below="@+id/service_provider_dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Address"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_below="@+id/service_provider_dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="30dp"/>

            <TextView
                android:id="@+id/service_provider_address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_provider_dp"
                android:layout_centerHorizontal="true"
                android:text="Address"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="State"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_below="@+id/service_provider_dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="30dp"/>

            <TextView
                android:id="@+id/service_provider_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_below="@+id/service_provider_dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pin code"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_below="@+id/service_provider_dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="30dp"/>

            <TextView
                android:id="@+id/service_provider_pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pin code"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_below="@+id/service_provider_dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cr_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_service_provider"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/colorAccent2"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/service_provider_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/service_provider_dp"
                android:layout_margin="20dp"
                android:text="Price"
                android:textAlignment="center"
                android:textColor="@color/whiteTextColor"
                android:textSize="18sp"
                android:textStyle="italic" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_service_provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_button"
            android:text="BOOK"
            android:textSize="18dp"
            android:textColor="@color/whiteTextColor"
            android:textStyle="bold"
            android:padding="20dp"/>

    </RelativeLayout>

</LinearLayout>